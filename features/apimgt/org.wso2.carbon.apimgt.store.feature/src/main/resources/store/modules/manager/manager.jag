function validateHostName(match, host) {
      var CarbonUtils = Packages.org.wso2.carbon.utils.CarbonUtils;
         var carbonUtils = new CarbonUtils();
         var hostName = carbonUtils.getServerConfiguration().getFirstProperty("HostName");
         var process = require('process');
         if ((hostName != null && match.host.split(":")[0].equals(hostName.split(":")[0])) || match.host.split(":")[0].equals(process.getProperty('carbon.local.ip').split(":")[0])) {
                    return host;
         } else if(isReverseProxyEnabled()) {
             var proxyHost = site.reverseProxy.host;
             if(!host.split(":")[0].equals(proxyHost)) {
                 // Possible HOST Header Attack is identified with reverse proxy enabled. Hence, rewritting to defaul revers proxy host in configuration.
                 host = proxyHost;
             }
             return match.protocol + "//" + host;
         } else if(site.reverseProxy.enabled != "auto") {
       // Possible HOST Header Attack is identified. Hence, rewritting to defaul host in configuration.
        if (hostName) {equals
            host = hostName + ":" + process.getProperty('mgt.transport.https.port');
        } else {
            host = process.getProperty('carbon.local.ip') + ":" + process.getProperty('mgt.transport.https.port');
        }
          return match.protocol + "//" + host;
              } else {
                  return host;
    }
};
var isReverseProxyEnabled = function(){
        var reverse_proxy;
        if(reverse_proxy != undefined){
            return reverse_proxy;
        }
        if(site.reverseProxy.enabled){
            if(site.reverseProxy.enabled == "auto"){
                var xfwd = request.getHeader("X-Forwarded-Host");
                if(xfwd != null){
                    var xfwd = xfwd.split(",")[0];
                    //if(xfwd.trim() == site.reverseProxy.host){
                        reverse_proxy = true;
                        site.reverseProxy.host = xfwd.trim();
                    //}
                }else{
                    reverse_proxy = false;
                }
            }
            else{
                reverse_proxy = true;
            }
        }
        else{
            reverse_proxy = false;
        }
        return reverse_proxy;
    };
